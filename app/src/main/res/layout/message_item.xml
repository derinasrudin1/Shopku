<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Gambar pengirim di sebelah kiri -->
    <ImageView
        android:id="@+id/imageSender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circular_background"
        android:clipToOutline="true"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kamera" />

    <!-- Layout vertikal untuk teks -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nama pengirim -->
        <TextView
            android:id="@+id/tvSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengirim"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Isi pesan -->
        <TextView
            android:id="@+id/tvMessageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi pesan"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Tanggal di sebelah kanan atas -->
    <TextView
        android:id="@+id/tvMessageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 PM"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="top" />
</LinearLayout>
